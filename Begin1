//Дана сторона квадрата a. Найти его периметр P = 4·a.
#include <stdio.h>
 
int main()
{
    int a;
    printf("введите значение стороны a:");
    
    scanf ("%d", &a);
 
    int P= 4*a;
    
    printf("периметр квадата равен P:%d",P);
 
    return 0;
}
