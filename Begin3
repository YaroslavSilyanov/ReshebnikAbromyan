//Задачник Абрамяна 
// Даны стороны прямоугольника a и b. Найти его площадь S = a·b и периметр P = 2·(a + b).
#include <stdio.h>
 
int main()
{
    int a, b;
    
    printf("введите значение стороны прямоугольника a:");
    
    scanf ("%d", &a);
    
    printf("введите значение стороны прямоугольника b:");
    
    scanf ("%d", &b);
    
    int S= a*b;
    
    int P= 2*(a+b);
    
    printf("площадь прямоугольника равна S:%d\n",S);
    
    printf ("периметр прямоугольника равен P:%d",P);
 
    return 0;
}
